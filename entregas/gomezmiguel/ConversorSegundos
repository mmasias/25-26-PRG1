import java.util.Scanner;

class ConversorSegundos {
    public static void main(String[] args) {
        final int SEGUNDOS_POR_DIA = 86400;
        final int SEGUNDOS_POR_HORA = 3600;
        final int SEGUNDOS_POR_MINUTO = 60;

        Scanner scanner = new Scanner(System.in);

        System.out.print("¿Cuántos segundos deseas convertir? ");
        int totalSegundos = scanner.nextInt();

        int dias = totalSegundos / SEGUNDOS_POR_DIA;
        int segundosRestantes = totalSegundos % SEGUNDOS_POR_DIA;

        int horas = segundosRestantes / SEGUNDOS_POR_HORA;
        segundosRestantes %= SEGUNDOS_POR_HORA;

        int minutos = segundosRestantes / SEGUNDOS_POR_MINUTO;
        int segundos = segundosRestantes % SEGUNDOS_POR_MINUTO;

        System.out.println("\nResultado:");
        if (dias > 0) {
            String unidadDias = dias == 1 ? "día" : "días";
            System.out.println(dias + " " + unidadDias);
        }
        if (horas > 0) {
            String unidadHoras = horas == 1 ? "hora" : "horas";
            System.out.println(horas + " " + unidadHoras);
        }
        if (minutos > 0) {
            String unidadMinutos = minutos == 1 ? "minuto" : "minutos";
            System.out.println(minutos + " " + unidadMinutos);
        }
        if (segundos > 0 || (dias == 0 && horas == 0 && minutos == 0)) {
            String unidadSegundos = segundos == 1 ? "segundo" : "segundos";
            System.out.println(segundos + " " + unidadSegundos);
        }

        scanner.close();
    }
}